    <section class="login_section">
        <%- include('partials/messages'); %>
            <h1>Login here: </h1>
            <form action="/users/login" method="POST" class="login_form">

                <label>Email</label>
                <input type="text" name="email" id="email" class="form-control" placeholder="Please enter your email here..">
                <label>Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Please enter you password..">
                <button type="submit">Submit</button>
                <p>Don't have an account?</p>
                <a href="/register">Register here</a>
                <p>Forgot password?</p>
                <a href="/forgot">Reset here</a>
            </form>

    </section>


